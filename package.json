{
  "name": "decimalish",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Decimal \"big number\" arbitrary-precision primitives with a lightweight yet powerful math library",
  "keywords": [
    "arbitrary",
    "precision",
    "exact",
    "arithmetic",
    "math",
    "big",
    "bigdecimal",
    "decimal",
    "dec",
    "biginteger",
    "bigint",
    "integer",
    "int",
    "bignumber",
    "bignum",
    "number",
    "primitive"
  ],
  "main": "decimalish.js",
  "module": "decimalish.mjs",
  "types": "decimalish.d.ts",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "run-s --silent build:*",
    "build:clean": "rm -rf dist; mkdir dist",
    "build:files": "run-p build:files:*",
    "build:files:copy": "cp LICENSE README.md dist/",
    "build:files:package": "node -e \"var o={},p=require('./package.json'),k;for(k in p){if(k==='private')break;o[k]=p[k]}console.log(JSON.stringify(o,null,2))\" > dist/package.json",
    "build:files:main": "run-s build:files:main:*",
    "build:files:main:js": "rollup decimalish.ts -o dist/decimalish.js -f umd --output.name decimalish --no-esModule -p typescript -p buble",
    "build:files:main:min": "terser dist/decimalish.js -o dist/decimalish.min.js -cm --ie8 --safari10",
    "build:files:module": "rollup decimalish.ts -o dist/decimalish.mjs -f esm -p typescript",
    "build:files:types": "tsc decimalish.ts --outFile dist/decimalish.d.ts --declaration --emitDeclarationOnly --stripInternal",
    "build:report": "row(){ printf \"$(tput setaf 6)%-22s $(tput setaf 5)%8s $(tput setaf 3)%8s$(tput sgr0)\n\" $1 $2 $3;}; row File Size Zipped; for file in dist/*; do row $file $(cat $file | wc -c) $(cat $file | gzip -9c | wc -c); done",
    "integration": "run-p integration:*",
    "integration:es3": "es-check es3 dist/decimalish.js dist/decimalish.min.js",
    "integration:webpack": "cd tests/webpack-tree-shaking && run-s --silent test:*"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.2",
    "big.js": "^6.1.1",
    "decimal": "^0.0.2",
    "es-check": "^6.1.1",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.60.0",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "auto"
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
