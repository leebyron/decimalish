{
  "name": "decimalish",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Decimal \"big number\" arbitrary-precision primitives with a lightweight yet powerful math library",
  "keywords": [
    "arbitrary",
    "precision",
    "exact",
    "arithmetic",
    "math",
    "big",
    "bigdecimal",
    "decimal",
    "dec",
    "biginteger",
    "bigint",
    "integer",
    "int",
    "bignumber",
    "bignum",
    "number",
    "primitive"
  ],
  "main": "decimalish.js",
  "module": "decimalish.mjs",
  "types": "decimalish.d.ts",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "prettier": "prettier --ignore-path .gitignore -w '**/*.{js,ts,tsx,css}'",
    "test": "run-p -slc test:*",
    "test:prettier": "prettier --ignore-path .gitignore -c '**/*.{js,ts,tsx,css}'",
    "test:typecheck": "tsc",
    "test:unit": "jest --collectCoverage",
    "build": "npm-run-all --silent -sl build:clean -p build:files:* -s build:size-report",
    "build:clean": "rm -vrf dist && mkdir -v dist",
    "build:files": "run-p -slc build:files:*",
    "build:files:copy": "cp -v LICENSE README.md dist/",
    "build:files:package": "node -e \"var o={},p=require('./package.json'),k;for(k in p){if(k==='private')break;o[k]=p[k]}console.log(JSON.stringify(o,null,2))\" > dist/package.json && echo 'package.json -> dist/package.json'",
    "build:files:main": "run-s build:files:main:*",
    "build:files:main:js": "rollup decimalish.ts -o dist/decimalish.js -f umd --output.name decimalish --no-esModule -p typescript -p buble",
    "build:files:main:min": "terser dist/decimalish.js -o dist/decimalish.min.js -cm --ie8 --safari10 && echo 'decimalish.ts â†’ dist/decimalish.min.js'",
    "build:files:module": "rollup decimalish.ts -o dist/decimalish.mjs -f esm -p typescript",
    "build:files:types": "tsc decimalish.ts --outFile dist/decimalish.d.ts --declaration --emitDeclarationOnly --strict --stripInternal",
    "build:size-report": "row(){ printf \"$(tput setaf 6)%-22s $(tput setaf 5)%8s $(tput setaf 3)%8s$(tput sgr0)\n\" $1 $2 $3;}; row File Size Zipped; for file in dist/*; do row $file $(cat $file | wc -c) $(cat $file | gzip -9c | wc -c); done",
    "integration": "run-p -slc integration:*",
    "integration:es3": "es-check es3 dist/decimalish.js dist/decimalish.min.js",
    "integration:webpack": "cd tests/webpack-tree-shaking && run-s -sl test:*",
    "website:build": "run-s -sl website:build:*",
    "website:build:clean": "rm -vrf website/dist && mkdir -v website/dist",
    "website:build:static": "cp -v website/static/* website/dist",
    "website:build:index": "ts-node website/build.tsx",
    "website:dev": "npm run website:build && chokidar \"decimalish.ts\" \"README.md\" \"website/*\" -c \"npm run website:build:index\""
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-typescript": "^8.3.4",
    "@size-limit/esbuild": "^8.0.1",
    "@size-limit/file": "^8.0.1",
    "@size-limit/time": "^8.0.1",
    "@types/big.js": "^6.1.5",
    "@types/jest": "^28.1.7",
    "bi": "^0.0.1",
    "big.js": "^6.2.1",
    "chokidar-cli": "^3.0.0",
    "es-check": "^7.0.0",
    "hyperjsx": "^1.0.12",
    "jest": "^28.1.3",
    "markdown-to-jsx": "^7.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "shiki": "^0.11.1",
    "size-limit": "^8.0.1",
    "terser": "^5.14.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "auto"
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid"
  }
}
